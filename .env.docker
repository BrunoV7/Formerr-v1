# Environment variables for Docker Compose
# Copy from .env.example and adjust as needed

# GitHub OAuth (required for authentication)
GITHUB_CLIENT_ID=your_GITHUB_CLIENT_ID_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Security secrets (generate strong secrets for production)
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-here

# Database (will use postgres service in docker-compose)
DATABASE_URL=postgresql://formerr_user:formerr_password@postgres:5432/formerr_db

# Frontend API URL (points to backend service)
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS - allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
